<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_gray_d1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="原音"
            android:textColor="@color/record_title_bg_selected"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/origin_audio_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/shape_edit_voice_pb_bg"
            android:thumb="@drawable/like" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="配乐"
            android:textColor="@color/record_title_bg_selected"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/music_audio_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/shape_edit_voice_pb_bg"
            android:thumb="@drawable/like" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_switcher_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_btn"
            android:padding="@dimen/dp_10"
            android:text="原音开"
            android:textColor="@color/main_default_color"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/tv_native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_edit_btn"
            android:padding="@dimen/dp_10"
            android:text="本 地"
            android:textColor="@color/main_default_color"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toLeftOf="@+id/tv_native"
            android:background="@drawable/bg_edit_btn"
            android:padding="@dimen/dp_10"
            android:text="在 线"
            android:textColor="@color/main_default_color"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toLeftOf="@+id/tv_online"
            android:background="@drawable/bg_edit_btn"
            android:padding="@dimen/dp_10"
            android:text="录 音"
            android:textColor="@color/main_default_color"
            android:textSize="13.5sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_22"></LinearLayout>
</LinearLayout>