<?xml version="1.0" encoding="utf-8"?>
<com.atgc.cotton.widget.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingTop="9dp"
   >

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_choose"
            android:layout_marginLeft="5dp"
            android:src="@drawable/selected"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <ImageView
            android:layout_toRightOf="@id/img_choose"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="少时诵诗书所所所所所所所"
            android:textColor="@color/text_color_black" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="9dp"
            android:text="少时诵诗书所所所所所所所"
            android:textColor="@color/text_color_gray_d" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="9dp"
            android:text="￥666"
            android:textColor="#ed6356" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_price"
            android:layout_marginLeft="9dp"
            android:text="库存"
            android:textColor="@color/text_color_black" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:src="@drawable/delete_goods" />

</com.atgc.cotton.widget.SwipeMenuView>