<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_navigation_bar_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_11"
            android:paddingRight="@dimen/dp_11"
            android:src="@drawable/nav_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:textColor="@color/main_default_color"
            android:textSize="22sp" />

        <!--<TextView-->
        <!--android:id="@+id/tv_save"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="11dp"-->
        <!--android:background="@drawable/bg_orange_btn"-->
        <!--android:padding="10dp"-->
        <!--android:text="保存"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="16sp" />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_gray_d1"></LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="头像"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@drawable/data_enter" />

                <com.atgc.cotton.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:layout_toLeftOf="@+id/iv_tag"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_nick"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_nick_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="昵称"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@drawable/data_enter" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="17.5dp"
                    android:layout_toLeftOf="@+id/iv_tag1"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/tv_nick_tag"
                    android:singleLine="true"
                    android:text="Andy" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="性别"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@drawable/data_enter" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:layout_toLeftOf="@+id/iv_tag2"
                    android:text="男" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_id"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="用户ID"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:background="@drawable/bg_gray"
                    android:padding="6dp"
                    android:text="点击复制"
                    android:textColor="@color/text_color_gray_6" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:layout_toLeftOf="@+id/tv_tag"
                    android:text="354542354"
                    android:textColor="@color/text_color_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qr_code"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="二维码"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@drawable/data_enter" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:layout_toLeftOf="@+id/iv_tag3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/data_aqcode" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_intro"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_tag6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.5dp"
                    android:text="个人介绍"
                    android:textColor="@color/main_checked_color"
                    android:textSize="15.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@color/line_color_gray_d1"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_tag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@drawable/data_enter" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginRight="17.5dp"
                    android:layout_toLeftOf="@+id/iv_tag4"
                    android:layout_toRightOf="@+id/tv_tag6"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:text="介绍下自己吧，很开心!~" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>