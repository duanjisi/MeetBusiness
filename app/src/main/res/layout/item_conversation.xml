<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12dp">

        <com.atgc.cotton.widget.CircleImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|right"
            android:background="@drawable/bg_circle_notify"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fl"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_toRightOf="@+id/fl"
        android:singleLine="true"
        android:text="test_1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_toLeftOf="@+id/tv_time"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="三等分三大件发送旅客定界符四颗流弹就风口浪尖四大皆空拉夫桑"
        android:textColor="@color/text_color_gray_6"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fl"
        android:layout_marginRight="17.5dp"
        android:text="12:35"
        android:textColor="@color/text_color_gray_6"
        android:textSize="@dimen/text_size_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/fl"
        android:layout_below="@+id/fl"
        android:layout_marginTop="11dp"
        android:background="@color/line_color_gray_d1"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>