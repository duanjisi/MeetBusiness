<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/delete_goods" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_circle" />

    <EditText
        android:id="@+id/et_acconut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/img_head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="手机号码"
        android:inputType="textPhonetic"
        android:textColorHint="@color/hint_text_color"
        android:textCursorDrawable="@null"
        android:textSize="17.5sp" />


    <View
        android:id="@+id/view_account"
        android:layout_width="match_parent"
        android:layout_height="1.6px"
        android:layout_below="@id/et_acconut"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_color_gray_d2"></View>


    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_account"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="密码6~16个字符"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColorHint="@color/hint_text_color"
        android:textCursorDrawable="@null"
        android:textSize="17.5sp" />


    <View
        android:id="@+id/view_pw"
        android:layout_width="match_parent"
        android:layout_height="1.6px"
        android:layout_below="@id/et_pw"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_color_gray_d2"></View>

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_pw">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="17.5sp" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>


    <View
        android:id="@+id/view_code"
        android:layout_width="match_parent"
        android:layout_height="1.6px"
        android:layout_below="@id/rl_code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_color_gray_d2"></View>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="51.7dp"
        android:layout_below="@id/view_code"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_shape"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="17.5sp" />

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25.3dp"
        android:text="接受短信大约需要45秒"
        android:textColor="@color/hint_text_color"
        android:textSize="14.3sp" />


</RelativeLayout>