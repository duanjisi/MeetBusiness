<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_back"
            android:src="@drawable/nav_return"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            android:layout_centerInParent="true"
            android:id="@+id/tv_title"
            android:text="购物车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button

            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_shape"
            android:text="编辑"
            android:layout_width="50dp"
            android:layout_height="40dp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_delete"
        android:textColor="@color/white"
        android:background="@color/edit_red"
        android:gravity="center"
        android:text="购买"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_above="@id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:background="@color/text_color_black"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">


        </View>

        <ImageView
            android:id="@+id/img_choose"
            android:src="@drawable/unchecked"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView

            android:textSize="15sp"
            android:layout_toRightOf="@id/img_choose"
            android:layout_marginLeft="4dp"
            android:text="全选"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:text="总计:  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_num"
                android:textColor="@color/edit_red"
                android:textSize="15sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_below="@id/rl_top"
        android:layout_above="@id/rl_bottom"
        android:id="@+id/rcv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>