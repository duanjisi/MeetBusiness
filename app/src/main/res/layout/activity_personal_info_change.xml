<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_navigation_bar_height" />
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_marginTop="16.5dp"-->
    <!--android:background="@color/bg_gray" />-->

    <com.atgc.cotton.widget.ClearEditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:visibility="gone">

        <requestFocus />
    </com.atgc.cotton.widget.ClearEditText>

    <RelativeLayout
        android:id="@+id/rl_sex_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_bt_selector"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="男"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_man_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hp_red_selected" />

    </RelativeLayout>

    <View
        android:id="@+id/v_sex"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

    <RelativeLayout
        android:id="@+id/rl_sex_woman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_bt_selector"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_woman_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hp_red_selected"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_signature"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/white"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_signature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="17.6sp" />

        <TextView
            android:id="@+id/tv_signature_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="30"
            android:textColor="@color/text_gray" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

</LinearLayout>